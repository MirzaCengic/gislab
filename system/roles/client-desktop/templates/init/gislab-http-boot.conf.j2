description "GIS.lab HTTP boot"
start on runlevel [2345]
stop on runlevel [06]
respawn
respawn limit 10 5

script
. {{ GISLAB_PATH_CLIENTS }}/desktop/virtualenv/http-boot/bin/activate
export PYTHONPATH={{ GISLAB_PATH_CLIENTS }}/desktop/http-boot
{{ GISLAB_PATH_CLIENTS }}/desktop/virtualenv/http-boot/bin/gunicorn \
  --name gislab-http-boot \
  --bind 0.0.0.0:6700 \
  --user www-data \
  --group www-data \
  --workers 1 \
  --log-syslog \
  --log-level error \
  gislab-http-boot:application
end script
