case "$MODE" in
	finalization)
		if [ "$GISLAB_CLIENT_LOAD_BALANCER_ENABLED" == "True" ]; then
			chroot $ROOT apt-get --assume-yes --force-yes install apache2 apache2-mpm-worker libapache2-mod-fastcgi qgis-mapserver unzip

			# apache
			mkdir -p $ROOT/var/www/default
			cp /var/www/default/index.html $ROOT/var/www/default/index.html

			cp /etc/apache2/ports.conf $ROOT/etc/apache2/ports.conf
			cp /etc/apache2/sites-available/default $ROOT/etc/apache2/sites-available/default
			cp /etc/apache2/sites-available/mapserver $ROOT/etc/apache2/sites-available/mapserver

			# log error to syslog
			sed -i 's/^ErrorLog .*/ErrorLog "|\/usr\/bin\/logger -t apache -p daemon.warn"/' $ROOT/etc/apache2/apache2.conf

			chroot $ROOT a2enmod rewrite
			chroot $ROOT a2enmod expires
			chroot $ROOT a2ensite default
			chroot $ROOT a2ensite mapserver

			# serf
			chroot $ROOT /bin/bash -c "source /usr/local/gislab/functions.sh; gislab_serf_install"

			mkdir -p $ROOT/etc/serf/bin
			cp $GISLAB_INSTALL_WORKER_ROOT/serf/bin/serf-member-*.sh $ROOT/etc/serf/bin/
			chmod +x $ROOT/etc/serf/bin/serf-member-*.sh

			cp $GISLAB_INSTALL_WORKER_ROOT/serf/serf.conf $ROOT/etc/init/serf.conf
			cp $GISLAB_INSTALL_WORKER_ROOT/serf/serf-join.conf $ROOT/etc/init/serf-join.conf
		fi
	;;
esac
