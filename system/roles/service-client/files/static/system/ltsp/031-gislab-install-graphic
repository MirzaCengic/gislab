# Install GIS.lab graphic

case "$MODE" in
    finalization)
	cp -a $GISLAB_INSTALL_CLIENT_ROOT/ldm/themes/gislab $ROOT/usr/share/ldm/themes/
	cp $GISLAB_ROOT/$GISLAB_LOGO $ROOT/usr/share/ldm/themes/gislab/logo.png

	cp $GISLAB_ROOT/$GISLAB_WALLPAPER $ROOT/usr/share/xfce4/backdrops/gislab-wallpaper.png

	cp /var/www/webgis/static/viewer/images/webgis.xpm $ROOT/usr/share/pixmaps/webgis.xpm
    ;;
esac
