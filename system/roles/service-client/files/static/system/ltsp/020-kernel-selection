# Latest kernel supported by VirtualBox Guest additions on Ubuntu 12.04 is 3.8 (linux-image-generic-lts-raring).
# Force installation of this kernel version. This overrides script provided by LTSP.

case "$MODE" in
    finalization)
	# Stop if not running on Ubuntu 12.04
    	if [ $(lsb_release --release --short) != "12.04" ]; then exit 1; fi

        case $ARCH in
            amd64)
                KERNEL_ARCH="generic-lts-raring"
            ;;

            i386)
                KERNEL_ARCH="generic-lts-raring"
            ;;
        esac
        LATE_PACKAGES="$LATE_PACKAGES linux-image-$KERNEL_ARCH"
    ;;
esac
