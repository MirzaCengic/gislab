# Install GIS.lab client packages. This overrides script provided by LTSP.

case "$MODE" in
    after-install)
        # Re-enable recommended packages installation for fat clients
        APT_GET_OPTS_ORIG=$APT_GET_OPTS
        APT_GET_OPTS=$(echo "$APT_GET_OPTS" | sed 's/--no-install-recommends//')

        # Install the packages
        for package in ubuntu-standard $GISLAB_CLIENT_INSTALL_PACKAGES_DEFAULT; do
            echo "Installing $package"
            chroot $ROOT apt-get $APT_GET_OPTS install $package
        done

        # Restore original apt-get options 
        APT_GET_OPTS=$APT_GET_OPTS_ORIG


	# Install GIS.lab packages
        for package in $GISLAB_CLIENT_INSTALL_PACKAGES_GIS; do
            echo "Installing $package"
	chroot $ROOT apt-get --no-install-recommends --assume-yes --force-yes install $package
        done
    ;;
esac
