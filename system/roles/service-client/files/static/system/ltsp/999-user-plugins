# Run user provided client plugins

case "$MODE" in
	finalization)
		rm -rf $ROOT/tmp/gislab-user-plugins
		mkdir -p $ROOT/tmp/gislab-user-plugins
		cp -a $GISLAB_ROOT/user/plugins/client/*.* $ROOT/tmp/gislab-user-plugins
		chroot $ROOT /bin/bash -c 'for plugin in /tmp/gislab-user-plugins/*; do $plugin; done'
		rm -rf $ROOT/tmp/gislab-user-plugins
	;;
esac
