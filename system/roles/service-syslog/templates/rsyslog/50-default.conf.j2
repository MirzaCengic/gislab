# Ignored Serf messages (see GH #363)
:msg, contains, "memberlist: Initiating push/pull sync" ~
:msg, contains, "memberlist: Responding to push/pull sync" ~

# Ignore Ansible messages
:syslogtag, contains, "ansible-" ~


auth,authpriv.*			/storage/log/auth.log
*.*;auth,authpriv,local7.none	-/storage/log/syslog
kern.*				-/storage/log/kern.log
news.crit			/storage/log/news.crit
news.err			/storage/log/news.err
news.notice			-/storage/log/news.notice
*.emerg				:omusrmsg:*

daemon.*;mail.*;\
	news.err;\
	*.=debug;*.=info;\
	*.=notice;*.=warn	|/dev/xconsole

{% if not GISLAB_DEBUG_SERVICES %}
local0.err			/storage/log/syslog  # accept only 'error' level messages
local7.*			/storage/log/syslog  # accept all messages
{% else %}
local0.*			/storage/log/syslog
local7.*			/storage/log/syslog
{% endif %}
