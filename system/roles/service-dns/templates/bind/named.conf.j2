include "/etc/bind/named.conf.options";
include "/etc/bind/named.conf.local";
include "/etc/bind/named.conf.default-zones";

logging {
    channel default_syslog {
        syslog;
    };

    channel default_debug {
        null;
    };

    category default {
        default_syslog;
    };

    category unmatched {
        null;
    };

{% if GISLAB_DEBUG_SERVICES %}
    category queries {
        default_syslog;
    };
{% endif %}
};
