# Install GIS.lab graphic

case "$MODE" in
    finalization)
	cp -a /vagrant/system/client/ldm/themes/gislab $ROOT/usr/share/ldm/themes/
	cp /vagrant/$GISLAB_LOGO $ROOT/usr/share/ldm/themes/gislab/logo.png

	cp /vagrant/$GISLAB_WALLPAPER $ROOT/usr/share/xfce4/backdrops/gislab-wallpaper.png

	cp /vagrant/system/server/webgis/static/webgis/images/webgis.xpm $ROOT/usr/share/pixmaps/webgis.xpm
    ;;
esac
