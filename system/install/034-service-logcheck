#
### LOGCHECK ###
#

cat << EOL > /etc/logcheck/logcheck.conf
$(gislab_config_header)
INTRO=0
REPORTLEVEL="server"
SENDMAILTO="logcheck"
MAILASATTACH=0
FQDN=1
EOL

cat << EOL > /etc/logcheck/logcheck.logfiles
$(gislab_config_header)
/var/log/syslog
/var/log/auth.log
/var/log/postgresql/postgresql-9.1-main.log
/var/log/apache2/error.log
/var/log/apache2/webgis-error.log
/var/log/ircd/ircd-hybrid.log
EOL

cat << EOL > /etc/cron.d/logcheck
$(gislab_config_header)
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
MAILTO=root

@reboot		logcheck	if [ -x /usr/sbin/logcheck ]; then nice -n10 /usr/sbin/logcheck -R -H "[GIS.lab ($GISLAB_UNIQUE_ID)] "; fi
2 *	* * *	logcheck	if [ -x /usr/sbin/logcheck ]; then nice -n10 /usr/sbin/logcheck -H "[GIS.lab ($GISLAB_UNIQUE_ID)] "; fi
EOL


# vim: set syntax=sh ts=4 sts=4 sw=4 noet:
