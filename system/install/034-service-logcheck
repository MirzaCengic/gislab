#
### LOGCHECK ###
#

sed -i 's/^#INTRO=1.*/INTRO=0/' /etc/logcheck/logcheck.conf

cat << EOL > /etc/logcheck/logcheck.logfiles
/var/log/syslog
/var/log/auth.log
/var/log/postgresql/postgresql-9.1-main.log
/var/log/apache2/error.log
/var/log/apache2/webgis-error.log
/var/log/ircd/ircd-hybrid.log
EOL

cat << EOL > /etc/cron.d/logcheck
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
MAILTO=root

@reboot		logcheck	if [ -x /usr/sbin/logcheck ]; then nice -n10 /usr/sbin/logcheck -R -H "$GISLAB_UNIQUE_ID"; fi
2 *	* * *	logcheck	if [ -x /usr/sbin/logcheck ]; then nice -n10 /usr/sbin/logcheck -H "$GISLAB_UNIQUE_ID"; fi
EOL
